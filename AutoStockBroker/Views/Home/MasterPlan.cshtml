@{
    ViewBag.Title = "Master plan";
}

<style>
    .paper-bg-light {
        background-color: #F3F3F3;
    }

    .headerHighlight {
        width: 100%;
        height: 6vh;
        text-align: center;
        font-weight: 600;
        padding-top: 1.5vh;
        /*padding-bottom:0.5%;*/
        margin-bottom: 0.5vh;
    }

    .subheaderHighlight {
        width: 100%;
        height: 6vh;
        text-align: center;
        font-weight: 500;
        padding-top: 1.5vh;
        margin-bottom: 2vh;
    }

    .headerArea {
        margin-bottom:6vh;
    }
    
    .smallContainer {
        width: 85%;
    }

    .iconHeader {
        display:block;
        width:30vh;
        margin-left: auto;
        margin-right: auto;
        margin-bottom:5vh;
    }

    .miniIcon {
        height:4vh;
    }

    .adaptedTable {
        margin-top:-2vh;
        width:100%;
    }

    .adaptedTable, th, td {
        border:none !important; 
    }

    .flexible-row {
        margin-left: 5%;
        height: 100%;
    }

    .flex-container {
        display: -webkit-flex;
        display: flex;
        width: 106%;
        margin-left: -5%;
        margin-bottom:6vh;
    }

    .flex-column {
        background-color: white;
        width: 45%;
        height: 100%;
        padding-left: 6%;
        padding-right: 6%;
    }

    .flex-space-column {
        width: 10%;
        height: 100%;
    }

    .ul-circle {
        list-style-type: circle;
    }

    .ul-disc {
        list-style-type: disc;
    }

    .ul-square {
        list-style-type: square;
    }

    .ol-upper-roman {
        list-style-type: upper-roman;
    }

    .ol-lower-alpha {
        list-style-type: lower-alpha;
    }
</style>
<style>
    .flexBox {
        display:flex;
        
    }
</style>
<div class="container smallContainer">
    @*<div>
        <div class="flex-item">1</div>
        <div class="flex-item">2</div>
        <div class="flex-item">3</div>
        <div class="flex-item">4</div>
